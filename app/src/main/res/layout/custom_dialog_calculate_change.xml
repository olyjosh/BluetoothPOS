<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@color/container_color"
        android:gravity="center"
        android:text="Cash Exact Amount"
        android:textColor="#080000" />

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:text="Money"
            android:textColor="#080000" />

        <EditText
            android:id="@+id/money_dialog"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/text_dialog"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/container_color"
            android:gravity="left"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#080000" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_1"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:text="Total Amount"
            android:textColor="#080000" />

        <TextView
            android:id="@+id/amount_dialog"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/text_dialog"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/container_color"
            android:gravity="left"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#080000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:text="Balance"
            android:textColor="#080000" />

        <TextView
            android:id="@+id/change_dialog"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/text_dialog"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/container_color"
            android:gravity="left"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#080000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_3"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_close_change"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@color/button_color"
            android:gravity="center"
            android:text="Close"
            android:textColor="#080000" />

        <Button
            android:id="@+id/btn_save_change"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/text_dialog"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="Save"
            android:textColor="#080000" />

    </LinearLayout>


</RelativeLayout>




